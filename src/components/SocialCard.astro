---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  url: string;
  id: string;
  mdi: string;
  color: string;
}
const { title, id, url, mdi, color } = Astro.props;
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class="card"
  style={{ backgroundColor: color }}
>
  <div>
    <h2>{title}</h2>
    <span>@{id}</span>
  </div>
  <Icon name={mdi} width="3rem" height="3rem" />
</a>
<style>
  .card {
    display: grid;
    width: clamp(15rem, 80vw, 16rem);
    grid-template-columns: 1fr 3rem;
    justify-items: center;
    align-items: center;
    padding: 0.5rem 0.75rem;
    border-radius: 1rem;
    background-color: var(--sky);
    color: var(--white);
    text-decoration: none;
  }
  h2 {
    margin: 0;
  }
</style>
